<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mini_player_lin_layout"
    android:background="@drawable/top_border"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:padding="3dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mini_player_image"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/banner"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mini_player_audio_name"
                android:layout_marginStart="3dp"
                android:textSize="16sp"
                android:text="Bhoot Fm 20 oct 19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/mini_player_audio_artist"
                android:layout_marginStart="3dp"
                android:textSize="14sp"
                android:text="Rj Russel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/mini_player_playPause"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp"/>
    </LinearLayout>


</LinearLayout>