<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_margin="2dp"
    android:id="@+id/parentLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <FrameLayout
        android:foreground="#F5D3DE"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:layout_width="0dp">
        <ImageView
            android:src="@drawable/banner"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/imgAudioBanner"
            android:scaleType="fitXY"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgPlaying"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:src="@drawable/playingmusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>


    <LinearLayout
        android:layout_margin="3dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginBottom="5dp"
                android:foreground="#F3F3F3"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:id="@+id/txtAudioName"
                android:textSize="18dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                />


            <LinearLayout
                android:layout_weight="1"

                android:gravity="center_vertical"
                android:padding="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:foreground="#DCE0F5"
                        android:textColor="@android:color/white"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:id="@+id/txtEpisodeDate"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 sep 19" />
                </LinearLayout>

                <TextView
                    android:foreground="#DCE0F5"
                    android:layout_marginRight="2dp"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtAudioDuration"
                    android:textSize="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:4:22 sec" />

                <TextView
                    android:foreground="#DCE0F5"

                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:id="@+id/txtRadioName"
                    android:textSize="8dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radio Mirchi" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:foreground="#F0F0F0"

        android:layout_weight="1"
        android:weightSum="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgDownload"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_file_download_black_24dp"
            android:layout_width="20dp"
            android:layout_height="25dp"/>

        <ImageView
            android:id="@+id/imgMore"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>


</LinearLayout>