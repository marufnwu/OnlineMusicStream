<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parentLinearLayout"
    android:layout_width="160dp"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/banner"
        android:layout_height="120dp"
        android:layout_width="180dp"
        android:id="@+id/imgAudioBanner"
        android:scaleType="fitXY">
    </ImageView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.daasuu.ahp.AnimateHorizontalProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:max="100"
            android:layout_height="5dp"
            app:ahp_backgroundColor="#CAC9C9"
            app:ahp_progressColor="#EB4A3C" />



        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:id="@+id/txtAudioName"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Badsahi Angti- Bomkeysh Bokshi" />


        <LinearLayout
            android:gravity="center_vertical"
            android:padding="1dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_weight="2"
                android:id="@+id/txtEpisodeDate"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20 sep 19" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/txtAudioDuration"
                android:textSize="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0:4:22 sec" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_weight="1"
                android:id="@+id/txtRadioName"
                android:textSize="8dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Radio Mirchi" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>