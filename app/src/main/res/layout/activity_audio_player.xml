<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/mymusicbg"
    android:layout_height="match_parent"
    tools:context=".AudioPlayerActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="130dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/profile_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/banner"
            app:civ_border_width="5dp"
            app:civ_border_color="#72FF8A80"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/playerAudioName"
                android:textColor="#FF5722"
                android:textSize="20sp"
                android:text="Bhoot Fm 20 oct 19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/playerAudioArtistAlbum"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:max="100"
                android:progress="70"
                android:text="Bhoot Fm 20 oct 19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <SeekBar

            android:thumbTint="#962F52"
            android:id="@+id/playerAudioProgress"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
           android:progressDrawable="@drawable/seekbar_style"
            android:layout_height="10dp"/>

        <ImageView
            android:id="@+id/playerAudioPlayPause"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/play"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </LinearLayout>

</LinearLayout>